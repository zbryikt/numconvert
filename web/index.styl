@import vars
@import basic

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

#root
  margin: 20px

#result-panel
  margin-top: 20px

#options .checkbox, #options .radio
  display: inline-block
  vertical-align: bottom
  margin-right: 10px
  max-width: 160px
  background: #eee
  border-radius: 3px
  padding: 5px 10px 5px 30px
  position: relative
  cursor: pointer
  no-selection()
  &.disabled
    color: #ccc
    background: #f9f9f9
    cursor: not-allowed
    .mask
      display: block
  .mask
    position: absolute
    display: none
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(255,255,255,0.5)
    cursor: not-allowed

